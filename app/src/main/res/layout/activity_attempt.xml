<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context="com.example.accer.aphasia_app.training"
    android:id="@+id/trainingConstraint"
    android:keepScreenOn="true">


    <RelativeLayout
        android:id="@+id/relative_image"
        android:layout_width="250dp"
        android:layout_height="280dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_buttons"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.873">

        <ImageView
            android:id="@+id/img_training"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="97dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>



    <android.support.constraint.ConstraintLayout
        android:id="@+id/relative_cue"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_buttons"
        app:layout_constraintBottom_toBottomOf="@+id/relative_image"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toRightOf="@+id/relative_image"
        android:layout_marginLeft="0dp">

        <Button
            android:id="@+id/btn_cue1"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@drawable/hint"
            android:text=" ಸುಳಿವು 1"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textStyle="bold"
            android:textColor="@color/buttonText"

            app:layout_constraintRight_toLeftOf="@+id/btn_cue2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.068" />

        <Button
            android:id="@+id/btn_cue4"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@drawable/hint"
            android:text=" ಸುಳಿವು 4"
            android:layout_alignParentRight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_cue2"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.555" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@drawable/hint"
            android:text=" ಸುಳಿವು 2"
            android:textStyle="bold"
            android:id="@+id/btn_cue2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" />
        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@drawable/hint"
            android:text=" ಸುಳಿವು 3"
            android:id="@+id/btn_cue3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintRight_toLeftOf="@+id/btn_cue4"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_cue1"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintVertical_bias="0.555"
            android:textStyle="bold"/>

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/relative_check"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/relative_cue"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintLeft_toRightOf="@+id/relative_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relative_image"
        app:layout_constraintVertical_bias="0.166"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/btn_tick"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btnback"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tick"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
